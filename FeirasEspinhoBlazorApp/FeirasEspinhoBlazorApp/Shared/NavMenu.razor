@using SourceCode.WebClasses;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Feiras Virtuais de Espinho</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @foreach (Opcao op in getInstance().getMenu(menuApresentar))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href=@op.Link Match="NavLinkMatch.All">
                    <span class=@op.Simbolo aria-hidden="true"></span> @op.Texto
                </NavLink>
            </div>
        }
    </nav>
</div>

@code
{
    public static int menuApresentar { get; set; }
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private static NavBar menu = null;
    public static NavMenu Current { get; private set; }
    protected override void OnInitialized()
    {
        menuApresentar = (int)NavBar.menusNomes.Login;
        Current = this;
    }
    public static NavBar getInstance()
    {
        if (menu == null)
            menu = new NavBar();
        return menu;
    }
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    public void Refresh()
    {
        StateHasChanged();
    }
}
